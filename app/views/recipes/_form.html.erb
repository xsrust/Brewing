  </div>

  <div class="field">
    <%= form.label :carbonation, class: 'label'  %>
    <div class="control">
      <%= form.text_field :carbonatio, class: 'input' %>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <%= form.submit class: 'button is-link'%>
    </div>
  </div>
<% end %>
