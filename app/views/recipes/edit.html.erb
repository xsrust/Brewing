<h1 class="title">Editing Recipe</h1>

<div class="tabs is-toggle">
  <ul>
    <li class="recipe-tab is-active"><a href="#recipe">Recipe</a></li>
    <li class="fermentables-tab"><%= link_to 'Fermentables', recipe_fermentable_additions_path(recipe_id: @recipe.id), remote: true%></li>
    <li class="hops-tab"><%= link_to 'Hops', recipe_hop_additions_path(recipe_id: @recipe.id), remote: true%></li>
    <li class="cultures-tab"><%= link_to 'Cultures', recipe_culture_additions_path(recipe_id: @recipe.id), remote: true%></li>
  </ul>
</div>

<div class="box form-container">
  <%= render 'form', recipe: @recipe %>
</div>

<%= link_to 'Show', @recipe, class: 'button is-text' %> |
<%= link_to 'Back', recipes_path, class: 'button is-text' %>
