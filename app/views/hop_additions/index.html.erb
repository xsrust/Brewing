<p id="notice"><%= notice %></p>

<h1 class="title">Hop Additions</h1>

<table class="table is-striped is-fullwidth is-narrow is-hoverable">
  <thead>
    <tr>
      <th>Hop</th>
      <th>Amount</th>
      <th>Time unit</th>
      <th>Time</th>
      <th>Use</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hop_additions.each do |hop_addition| %>
      <tr class='<%="hop-addition-#{hop_addition.id}"%>'>
        <td><%= hop_addition.hop.name %></td>
        <td><%= hop_addition.amount %></td>
        <td><%= hop_addition.time_unit %></td>
        <td><%= hop_addition.time %></td>
        <td><%= hop_addition.use %></td>
        <td><%= link_to 'Edit', edit_recipe_hop_addition_path(@recipe, hop_addition), remote: true %></td>
        <td><%= link_to 'Destroy', recipe_hop_addition_path(@recipe, hop_addition), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
    <tr class="new-hop is-hidden">
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Hop Addition', new_recipe_hop_addition_path(@recipe), remote: true %>
