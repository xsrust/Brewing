<p id="notice"><%= notice %></p>

<h1 class="title">Culture Additions</h1>

<table class="table is-striped is-fullwidth is-narrow is-hoverable">
  <thead>
    <tr>
      <th>Culture</th>
      <th>Amount</th>
      <th>Time unit</th>
      <th>Time</th>
      <!-- <th>Duration unit</th> -->
      <!-- <th>Duration</th> -->
      <th>Attenuation</th>
      <th>Cell count billions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @culture_additions.each do |culture_addition| %>
      <tr class='<%="culture-addition-#{culture_addition.id}"%>'>
        <td><%= culture_addition.culture.name %></td>
        <td><%= culture_addition.amount %></td>
        <td><%= culture_addition.time_unit %></td>
        <td><%= culture_addition.time %></td>
        <!-- <td><%= culture_addition.duration_unit %></td> -->
        <!-- <td><%= culture_addition.duration %></td> -->
        <td><%= culture_addition.attenuation %></td>
        <td><%= culture_addition.cell_count_billions %></td>
        <td><%= link_to 'Edit', edit_recipe_culture_addition_path(@recipe, culture_addition), remote: true %></td>
        <td><%= link_to 'Destroy', recipe_culture_addition_path(@recipe, culture_addition), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
    <tr class="new-culture is-hidden">
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Culture Addition', new_recipe_culture_addition_path(@recipe), remote: true %>
